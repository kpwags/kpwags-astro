---
import { generateTagUrl } from '@lib/PostUtils';

interface Props {
    tags: string[];
}

const { tags } = Astro.props;
---

<ul class="tag-list">
    <li class="lead">Tagged:</li>
    {
        tags.map((tag) => (
            <li>
                <a href={`/tag/${generateTagUrl(tag)}`}>{tag}</a>
            </li>
        ))
    }
</ul>

<style>
    ul.tag-list {
        margin: 16px 0 24px 0 !important;
        padding: 0;
        width: 100%;
    }

    .tag-list li {
        display: inline-block;
        list-style-type: none;
        padding: 0 30px 0 0;
        line-height: 1.6;
        margin-bottom: 0 !important;
    }

    .tag-list li.lead {
        padding-left: 0;
        padding-right: 10px;
        font-weight: 600;
    }

    .tag-list li a {
        white-space: nowrap;
        font-size: 1.2rem;
    }
</style>

---
import { Image } from 'astro:assets';
import Xitter from '../assets/images/icons/xitter.svg';
import Mastodon from '../assets/images/icons/mastodon.svg';

interface Props {
    content: string;
    name: string;
    date: string;
    link: string;
    profileLink: string;
    source?: 'twitter' | 'mastodon' | 'other';
}

const { content, name, date, link, profileLink, source = 'other' } = Astro.props;
---

<div class="embedded-post">
    <blockquote class="post">
        <p>{content}</p>
        <div class="credit">
            <div class="author">(<a href={profileLink} target="_blank">{name}</a>) <a href={link} target="_blank">{date}</a></div>
            {
                source === 'twitter' ? (
                    <div class="source-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 16 16">
                            <path d="M12.6.75h2.454l-5.36 6.142L16 15.25h-4.937l-3.867-5.07-4.425 5.07H.316l5.733-6.57L0 .75h5.063l3.495 4.633L12.601.75Zm-.86 13.028h1.36L4.323 2.145H2.865l8.875 11.633Z" />
                        </svg>
                    </div>
                ) : null
            }
            {
                source === 'mastodon' ? (
                    <div class="source-icon">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 16 16">
                            <path d="M11.19 12.195c2.016-.24 3.77-1.475 3.99-2.603.348-1.778.32-4.339.32-4.339 0-3.47-2.286-4.488-2.286-4.488C12.062.238 10.083.017 8.027 0h-.05C5.92.017 3.942.238 2.79.765c0 0-2.285 1.017-2.285 4.488l-.002.662c-.004.64-.007 1.35.011 2.091.083 3.394.626 6.74 3.78 7.57 1.454.383 2.703.463 3.709.408 1.823-.1 2.847-.647 2.847-.647l-.06-1.317s-1.303.41-2.767.36c-1.45-.05-2.98-.156-3.215-1.928a3.614 3.614 0 0 1-.033-.496s1.424.346 3.228.428c1.103.05 2.137-.064 3.188-.189zm1.613-2.47H11.13v-4.08c0-.859-.364-1.295-1.091-1.295-.804 0-1.207.517-1.207 1.541v2.233H7.168V5.89c0-1.024-.403-1.541-1.207-1.541-.727 0-1.091.436-1.091 1.296v4.079H3.197V5.522c0-.859.22-1.541.66-2.046.456-.505 1.052-.764 1.793-.764.856 0 1.504.328 1.933.983L8 4.39l.417-.695c.429-.655 1.077-.983 1.934-.983.74 0 1.336.259 1.791.764.442.505.661 1.187.661 2.046v4.203z" />
                        </svg>
                    </div>
                ) : null
            }
        </div>
    </blockquote>
</div>

<style>
    .embedded-post {
        margin: 48px 32px;
    }

    blockquote.post {
        border-radius: 10px;
        border: 1px solid var(--grey-1);
        padding: 16px;
        margin: 0;
        background-color: var(--shaded-background);
    }

    blockquote.post:hover {
        box-shadow: var(--box-shadow);
    }

    blockquote.post p {
        margin-block-start: 0;
        font-size: 1.6rem;
        margin-bottom: 16px;
    }

    blockquote.post .credit {
        display: flex;
        justify-content: space-between;
    }

    blockquote.post svg {
        width: 24px;
        height: 24px;
        fill: var(--primary-color-1);
    }

    @media (max-width: 500px) {
        .embedded-post {
            margin: 24px 0;
        }

        blockquote.post {
            margin: 0;
        }
    }
</style>

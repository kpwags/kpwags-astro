---
import Metadata from './Metadata.astro';
import { formatDate } from '@lib/DateUtils';

interface Props {
    title: string;
    datePublished: Date;
    readTime?: number | null;
    readingLogNumber?: number;
}

const { title, datePublished, readTime, readingLogNumber = 0 } = Astro.props;
---

{
    readingLogNumber === 0 ? (
        <h1>{title}</h1>
    ) : (
        <h1>
            Reading Log -<br />
            {formatDate(datePublished)} (#{readingLogNumber})
        </h1>
    )
}

<Metadata date={datePublished} readTime={readTime} />

<style>
    h1 {
        margin: 0;
        line-height: 1;
    }
</style>
